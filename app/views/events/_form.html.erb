<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.label :date %><br />
    <%= f.date_select :date %>
  </div>

  <div>
    <%= f.label :repeat %><br />
    <%= f.select :repeat, Event::REPEAT.collect{|e| e} %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
